{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "yabai",
  "title": "Yabai",
  "description": "Control Yabai using Raycast",
  "icon": "yabai-icon-512px.png",
  "author": "krzysztoff1",
  "categories": [
    "Developer Tools",
    "Productivity"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "custom-yabai-com",
      "title": "Custom yabai command",
      "description": "Run custom yabai command",
      "mode": "no-view",
      "arguments": [
        {
          "name": "command",
          "placeholder": "Command",
          "type": "text",
          "required": false
        }
      ]
    },
    {
      "name": "start",
      "title": "Start Yabai",
      "description": "Start Yabai using brew - `brew services start yabai`",
      "mode": "no-view"
    },
    {
      "name": "stop",
      "title": "Stop Yabai",
      "description": "Stop Yabai using brew - `brew services stop yabai`",
      "mode": "no-view"
    },
    {
      "name": "rotate",
      "title": "Rotate",
      "description": "Rotate the tree",
      "mode": "no-view"
    },
    {
      "name": "mirror-x",
      "title": "Mirror X",
      "description": "Mirror the tree on the X axis",
      "mode": "no-view"
    },
    {
      "name": "mirror-y",
      "title": "Mirror Y",
      "description": "Mirror the tree on the Y axis",
      "mode": "no-view"
    },
    {
      "name": "balance",
      "title": "Balance",
      "description": "Balance the windows",
      "mode": "no-view"
    }
  ],
  "preferences": [
    {
      "name": "yabaiExecutablePath",
      "description": "Path to the yabai executable",
      "type": "textfield",
      "required": false,
      "default": "./opt/homebrew/bin/yabai",
      "title": "Path to the yabai executable",
      "placeholder": "Path to the yabai executable",
      "label": "By default, the extension will use the yabai executable from the homebrew installation. If you have yabai installed in a different location, you can specify it here."
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.50.4",
    "@raycast/utils": "^1.10.0",
    "execa": "^7.1.1"
  },
  "devDependencies": {
    "@raycast/eslint-config": "1.0.5",
    "@types/node": "18.8.3",
    "@types/react": "18.0.9",
    "eslint": "^7.32.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}
